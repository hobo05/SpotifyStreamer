<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp">

    <ImageView
        android:id="@+id/list_item_top_tracks_thumbnail"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/list_item_top_tracks_thumbnail_description"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center|start"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/list_item_top_tracks_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="This is a really really really really really really really long album"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"/>
        <TextView
            android:id="@+id/list_item_top_tracks_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="This is a really really really really really really really long track"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"/>
    </LinearLayout>

</LinearLayout>